@model EventaDors.Entities.Classes.User

@{
    Layout = "_NewLayout";
}
<div class="Container">
<form method="post" asp-controller="Login" asp-action="ProcessLogin">
    <section class="login-clean">
        <form method="post">
            <h2 class="sr-only">Login Form</h2>
            <div class="illustration"><i class="icon ion-log-in" style="color: #906d9a;"></i></div>
            <div class="form-group"><input class="form-control" asp-for="PrimaryEmail" type="email" name="email" placeholder="Email"></div>
            <div class="form-group"><input class="form-control" asp-for="CurrentPassword" type="password" name="password" placeholder="Password"></div>
            <div class="form-group"><button class="btn btn-primary btn-block" type="submit" style="color: rgb(252,209,91);background: rgb(144,109,154);">Log In</button></div><a class="forgot" asp-controller="ForgotPassword" asp-action="Index">Forgot your email or password?</a>
        </form>
    </section>
</form>
</div>
