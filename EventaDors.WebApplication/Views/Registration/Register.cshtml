@model EventaDors.Entities.Classes.Journey

@{
    Layout = "_NewLayout";
}

<!DOCTYPE html>
<section class="register-photo">
    <div class="form-container">
        <form asp-action="CompleteRegistration">
            <h2 class="text-center"><strong>Create</strong> an account.</h2>
            <div class="form-group">
                <input class="form-control" asp-for="Email" type="email" name="Email" placeholder="Email">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input class="form-control" asp-for="Password" type="password" name="Password" placeholder="Password">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input class="form-control" asp-for="RepeatPassword" type="password" name="RepeatPassword" placeholder="Password (repeat)">
                <span asp-validation-for="RepeatPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="form-check"><label class="form-check-label"><input class="form-check-input" type="checkbox">I agree to the site terms and conditions.</label></div>
            </div>
            <div class="form-group"><button class="btn btn-primary btn-block" type="submit" style="color: var(--warning);background: #906d9a;">Sign Up</button></div>
            <a class="already" asp-action="Index" asp-controller="Registration">You already have an account? Login here.</a>
        </form>
    </div>
</section>