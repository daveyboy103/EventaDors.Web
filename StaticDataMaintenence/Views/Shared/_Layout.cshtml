<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - StaticDataMaintenence</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css"
          rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" 
          crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css"/>
</head>
<body>
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Static Data Maintenence</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Events" asp-route-load="load" >Events</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a aria-expanded="false" data-bs-toggle="dropdown" class="dropdown-toggle nav-link link-secondary text-decoration-none" href="#">Guest Lists</a>
                        <div class="dropdown-menu">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="GuestGroups">Guest Groups</a>
                        </div>
                    </li> 
                    <li class="nav-item dropdown">
                        <a aria-expanded="false" data-bs-toggle="dropdown" class="dropdown-toggle nav-link link-secondary text-decoration-none" href="#">Utility</a>
                        <div class="dropdown-menu">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="SpecialNeeds">Special Needs</a>
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="GiftRegistry">Gift Registry</a>
                        </div>
                    </li>
                     <li class="nav-item dropdown">
                        <a aria-expanded="false" data-bs-toggle="dropdown" class="dropdown-toggle nav-link link-secondary text-decoration-none" href="#">Quotes</a>
                         <div class="dropdown-menu">
                             <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="QuoteElements">Quote Elements</a>
                             <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="QuoteSubStype">Quote Sub Type</a>
                             <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="QuoteTemplates">Quote Templates</a>
                             <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="QuoteTemplateEvents">Quote Template Events</a>
                             <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="QuoteTypes">Quote Types</a>
                         </div>
                     </li>
                </ul>
            </div>
        </div>
    </nav>
</header>
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2021 - StaticDataMaintenence - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
    </div>
</footer>
<script src="@GetPopper()" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.min.js" integrity="sha384-Atwg2Pkwv9vp0ygtn1JAojH0nYbwNJLPhwyoVbhoPwBhjQPR5VtM2+xf0Uwh9KtT" crossorigin="anonymous"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
@functions{

    string GetPopper()
    {
        return "https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js";
    }

}